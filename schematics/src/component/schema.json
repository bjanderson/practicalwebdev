{
  "$schema": "http://json-schema.org/schema",
  "id": "ComponentSchema",
  "title": "Component Schema",
  "type": "object",
  "properties": {
    "name": {
      "alias": "n",
      "type": "string",
      "description": "The name of your component"
    },
    "prefix": {
      "alias": "p",
      "default": "app",
      "type": "string",
      "description": "The html element prefix for your component"
    },
    "module": {
      "alias": "m",
      "default": false,
      "type": "boolean",
      "description": "Should this component have its own module?"
    },
    "route": {
      "alias": "r",
      "default": false,
      "type": "boolean",
      "description": "Should this component be routeable? (This automatically makes it a module too.)"
    }
  },
  "required": [
    "name"
  ]
}
